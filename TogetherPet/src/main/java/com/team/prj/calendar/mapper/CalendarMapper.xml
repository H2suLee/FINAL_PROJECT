<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team.prj.calendar.mapper.CalendarMapper">
	<select id="calendarSelectList" resultType="com.team.prj.calendar.service.CalendarVO">
		SELECT * FROM calendar
	</select>
	
	<select id="calendarSelect" resultType="com.team.prj.calendar.service.CalendarVO" parameterType="com.team.prj.calendar.service.CalendarVO">
		SELECT * FROM calendar WHERE calendar_no = #{calendarNo}
	</select>
	
	<insert id="calendarInsert" parameterType="com.team.prj.calendar.service.CalendarVO">
		<selectKey keyProperty="calendarNo" order="BEFORE" resultType="int">
			SELECT 
			    CASE WHEN max(calendar_no) IS NULL 
			    THEN 1
			    ELSE max(calendar_no) + 1 
			    END AS no
			FROM calendar
		</selectKey>
		
		INSERT INTO calendar
		VALUES(#{calendarNo}
			  ,#{title}
			  ,#{content}
			  ,#{startDt}
			  ,#{endDt})
	</insert>
	
	<update id="calendarUpdate"
		parameterType="com.team.prj.calendar.service.CalendarVO">
		UPDATE calendar
		SET title = #{title}
					,content = #{content}
					,start_dt = #{startDt}
					,end_dt = #{endDt}
		WHERE calendar_no = #{calendarNo}
	</update>

	<delete id="calendarDelete">
		DELETE FROM calendar WHERE alendar_no = #{calendarNo}
	</delete>

</mapper>